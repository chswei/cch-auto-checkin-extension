{
  "manifest_version": 3,
  "name": "彰基出勤系統自動打卡",
  "version": "1.0.0",
  "description": "自動化彰化基督教醫院打卡系統，支援值班、請假和加班日期設定",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "彰基自動打卡"
  },
  
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://dpt.cch.org.tw/EIP/*"],
      "js": ["utils.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["utils.js", "dialog-override.js"],
      "matches": ["https://dpt.cch.org.tw/*"]
    }
  ],
  
  "host_permissions": [
    "https://dpt.cch.org.tw/*"
  ]
}